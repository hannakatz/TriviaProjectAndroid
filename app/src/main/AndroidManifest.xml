<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.triviaproject">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TriviaProject">
        <activity
            android:name=".WinActivity"
            android:exported="true" />
        <activity
            android:name=".GameOverActivity"
            android:exported="true" />
        <activity
            android:name=".GameByCategoryActivity"
            android:exported="true" />
        <activity
            android:name=".GameCategoryActivity"
            android:exported="true" />
        <activity
            android:name=".ScoresPlayerActivity"
            android:exported="true" />
        <activity
            android:name=".GameAllCategoryActivity"
            android:exported="true" />
        <activity
            android:name=".GameTypeActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".SettingActivity" />

        <service android:name=".MusicService" />
    </application>

</manifest>